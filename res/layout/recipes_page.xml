<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<ListView
		android:id="@+id/recipesDishesList"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_margin="20dp"
		android:orientation="vertical"
		android:cacheColorHint="@android:color/transparent" />
	
	<ListView
		android:id="@+id/recipesSearchList"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_margin="10dp"
		android:orientation="vertical"
		android:visibility="gone"
		android:cacheColorHint="@android:color/transparent" />
	
	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:scaleType="fitXY"
		android:src="@drawable/list_divider_holo_light"
		android:contentDescription="@null" />
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="3dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingBottom="8dp"
		android:background="@color/bottom_light">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:contentDescription="@null"
			android:src="@drawable/ic_btn_search" />
		<EditText
			android:id="@+id/recipesSearch"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/recipesSearch"
			android:inputType="text"
			android:textColorHint="@android:color/darker_gray"
			android:background="@drawable/edit_text_holo_light" />
	</LinearLayout>
	
</LinearLayout>